@page "/MultiLineText"

@{
// resharper disable all
}

@{
    if (lines != null)
        for (int i = 0; i < lines.Length; i++)
        {
            @lines[i];
            if (i < lines.Length - 1)
            {
                <br />
            }
        }
}

@code {
    string[] lines;

    [Parameter]
    public string InputString { get; set; }

    protected override void OnParametersSet()
    {
        lines = InputString?.Split('\n');
    }
}
